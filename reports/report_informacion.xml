<odoo>

    <record id="paperformat_euro_portrait" model="report.paperformat">
        <field name="name">European A4 Portrait</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>


    <record id="paperformat_euro_landscape" model="report.paperformat">
        <field name="name">European A4 Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>


    <report id="action_report_informacion"
            string="Listaxe de Información"
            model="odoo_basico.informacion" report_type="qweb-pdf"
            name="odoo_basico.report_informacion_template"
            paperformat="paperformat_euro_portrait"/>
    <!--    En name="odoo_basico.report_informacion_template" se establece la plantilla a utilizar, definida en este caso más abajo -->

    <!-- PLantilla, la cual llama a los estilos ya creados en el módulo web de odoo ya incorporado -->
    <template id="report_informacion_template">
        <t t-call="web.html_container"/>
        <t t-call="web.external_layout">
            <table class="table table-sm">
                <thread>
                    <tr class="bg-primary">
                        <td class="text-left">
                            <h5>
                                <span t-field="o.name"/>
                            </h5>
                        </td>
                        <td class="text-left">
                            <span t-field="o.peso"/>
                            <t t-if="o.peso &gt; 3">
                                <t t-set="suma_peso" t-value="suma_peso + o.peso"/>
                            </t>
                        </td>
                        <td class="text-left">
                            <t t-if="o.autorizado == True">
                                <span>SI</span>
                            </t>
                            <t t-else="">
                                <span>NON</span>
                            </t>
                        </td>
<!--                        <td class="text-left">Datas</td>-->
                        <td class="text-left">Sexo</td>
                    </tr>
                </thread>

                <!-- En docs se tienen todos los registros del proyecto -->
                <tbody>
                    <t t-set="suma_peso" t-value="0"/>
                    <t t-foreach="docs" t-as="o"/>
                </tbody>
            </table>

        </t>
    </template>


</odoo>